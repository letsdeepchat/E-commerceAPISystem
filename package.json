{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "RESTful API for eCommerce application with authentication and product management",
  "main": "index.js",
  "type": "module",
  "author": "Deepak",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:verbose": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose",
    "lint": "echo 'Add ESLint configuration'",
    "format": "echo 'Add Prettier configuration'"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.1.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "testTimeout": 30000
  },
  "keywords": [
    "ecommerce",
    "api",
    "rest",
    "express",
    "mongodb",
    "authentication",
    "jwt",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/letsdeepchat/E-commerceAPISystem.git"
  },
  "bugs": {
    "url": "https://github.com/letsdeepchat/E-commerceAPISystem.git/issues"
  },
  "homepage": "https://github.com/letsdeepchat/E-commerceAPISystem.git#readme"
}
